<body id="login">
<div class="container-fluid authorization_container">
    <row class="frow lex-items-xs-center">
        <div class="col-md-4 hidden-sm-down"></div>
        <div class="col-xs-12 col-md-4 vertical_center">
            <h3 class="margin-bottom-40 editContent"><a href="/"><img alt="" src="images/icons/shield.svg"></a>SIGN IN
                TO AGRO
            </h3>
            <form role="form">
                <div class="form-group">
                    <input type="text" class="form-control input-lg" id="name" name="name" placeholder="Username *">
                </div>
                <div class="form-group">
                    <input type="password" class="form-control input-lg" id="password" name="password" placeholder="Password *">
                </div>
                <p><a class="forgot" href="#">Forgot your password?</a></p>
                <label class="checkbox checked col-xs-6" for="checkbox1">
                    <span class="icons"><span class="first-icon fui-checkbox-unchecked"></span><span class="second-icon fui-checkbox-checked"></span></span>
                    <input type="checkbox" checked="" value="" id="checkbox1" data-toggle="checkbox"> Stay signed in
                </label>
                <button type="submit" class="col-xs-12 btn btn-primary btn-embossed btn-sm btn-wide">送出</button>
            </form>
            <div class="spacer"></div>
        </div>
        <div class="col-md-4 hidden-sm-down"></div>
        <!-- /.col-->
    </row>
    <div id="login-bottom" class="col-xs-12">
